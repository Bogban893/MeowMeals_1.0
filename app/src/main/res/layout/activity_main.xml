<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType='centerCrop'
        android:src='@drawable/img_fon'
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"></ImageView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="505dp"
        android:layout_height="112dp"
        android:fontFamily="@font/pt_comi"
        android:gravity="center"
        android:text="MeowMeals"
        android:textColor="#F3FBFC"
        android:textSize="96sp"
        app:drawableTint="#FDFDFD"
        app:layout_constraintBottom_toBottomOf="@+id/button_s"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_s"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="201dp"
        android:layout_height="61dp"
        app:backgroundTint="#F3FBFC"
        android:fontFamily="@font/pt_comi"
        android:text="START"
        android:textColor='#132325'
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.434" />

    <Button
        android:id="@+id/button_q"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        app:backgroundTint="#F3FBFC"
        android:textColor='#132325'
        android:fontFamily="@font/pt_comi"
        android:text="QUIT"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_s" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="346dp"
        android:layout_height="36dp"
        android:fontFamily="@font/pt_comi"
        android:text=" author: Bonk893"
        android:textColor="#14ffec"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>